<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:gravity="center"
    android:orientation="vertical" >

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:indeterminate="true"
        android:visibility="gone" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:orientation="vertical">

            <!--    AD IMAGES     -->

            <TextView
                android:id="@+id/upload_count"
                style="@style/field"
                android:layout_marginBottom="30sp"
                android:paddingBottom="0dp"
                android:text="@string/img_count" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </androidx.recyclerview.widget.RecyclerView>

            </RelativeLayout>

            <ImageButton
                android:id="@+id/select_ad_img_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10sp"
                android:layout_marginVertical="30sp"
                android:backgroundTint="#595959"
                android:tint="#FFFFFF"
                app:srcCompat="@drawable/ic_add_black_24dp" />

            <!--    AD TITLE     -->

            <TextView
                style="@style/field"
                android:text="@string/ad_title" />

            <EditText
                android:id="@+id/post_ad_input_title"
                style="@style/inputFiled"
                android:inputType="textLongMessage" />

            <!--    AD DESCRIPTION     -->

            <TextView
                style="@style/field"
                android:text="@string/ad_desc" />

            <EditText
                android:id="@+id/post_ad_input_desc"
                style="@style/inputFiled"
                android:inputType="textLongMessage" />

            <!--    AD LOCATION     -->

            <TextView
                style="@style/field"
                android:text="@string/ad_price" />

            <EditText
                android:id="@+id/post_ad_input_price"
                style="@style/inputFiled"
                android:inputType="number" />

            <TextView
                style="@style/field"
                android:text="@string/ad_loc" />

            <EditText
                android:id="@+id/post_ad_input_location"
                style="@style/inputFiled"
                android:inputType="textAutoComplete" />

            <!--    AD CONDITION   -->

            <TextView
                style="@style/field"
                android:text="@string/ad_cond" />

            <Spinner
                android:id="@+id/post_ad_select_condition"
                style="@style/spinner_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!--    AD ADDITIONAL INFO    -->

            <TextView
                style="@style/field"
                android:text="@string/ad_info" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/inputFiled">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="4" >

                    <!--    AD WHEEL SIZE    -->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ad_wheel"
                        android:layout_weight="1" />

                    <Spinner
                        android:id="@+id/spinnerWheels"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <!--    AD BIKE AGE    -->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ad_age"
                        android:layout_weight="1" />

                    <EditText
                        android:id="@+id/post_ad_input_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:layout_weight="1" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="4" >

                    <!--    AD FRAME SIZE    -->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ad_frame"
                        android:layout_weight="1" />

                    <Spinner
                        android:id="@+id/spinnerWheels2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <!--    AD DRIVE TRAIN    -->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ad_dtrain"
                        android:layout_weight="1" />

                    <Spinner
                        android:id="@+id/spinnerFrame2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                </TableRow>

            </TableLayout>

            <!--    UPLOAD ADVERT    -->

            <Button
                android:id="@+id/upload_ad_btn"
                style="@style/btn_main"
                android:text="@string/upload" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>