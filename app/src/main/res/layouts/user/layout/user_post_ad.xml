<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >

    <ProgressBar
        android:id="@+id/progressBar"
        android:indeterminate="true"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:visibility="invisible"
        style="?android:attr/progressBarStyleHorizontal" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:orientation="vertical">

            <!--    Advertisement Input Details Fields    -->

            <!--    Ad Title     -->

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway_semibold"
                android:text="@string/item_img"
                android:textAlignment="textStart"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_img"
                android:layout_width="match_parent"
                android:layout_height="162dp" />

            <TextView
                android:id="@+id/textView_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway_semibold"
                android:text="@string/ad_title"
                android:textAlignment="textStart"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/post_ad_input_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:background="@drawable/border_input"
                android:ems="10"
                android:inputType="textLongMessage"
                android:padding="10dp"
                android:textAlignment="textStart" />

            <!--    Ad Description     -->

            <TextView
                android:id="@+id/textView_Title2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway_semibold"
                android:text="@string/ad_desc"
                android:textAlignment="textStart"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/post_ad_input_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:background="@drawable/border_input"
                android:ems="10"
                android:inputType="textLongMessage"
                android:padding="10dp"
                android:textAlignment="textStart" />

            <!--    Ad Location     -->

            <TextView
                android:id="@+id/textView_Title3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway_semibold"
                android:text="@string/ad_loc"
                android:textAlignment="textStart"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/post_ad_input_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:background="@drawable/border_input"
                android:ems="10"
                android:inputType="textAutoComplete"
                android:padding="10dp"
                android:textAlignment="textStart" />

            <!--    Ad Condition   -->

            <TextView
                android:id="@+id/textView_Title4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway_semibold"
                android:text="@string/ad_cond"
                android:textAlignment="textStart"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/post_ad_select_condition"
                style="@style/spinner_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:textSize="18sp" />

            <!--    Ad Price    -->

            <TextView
                android:id="@+id/textView_Title6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway_semibold"
                android:text="@string/ad_price"
                android:textAlignment="textStart"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/post_ad_input_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:background="@drawable/border_input"
                android:ems="10"
                android:inputType="number"
                android:padding="10dp"
                android:textAlignment="textStart" />


            <!--    Submit Ad Button    -->

            <Button
                android:id="@+id/post_ad_select_img_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/select_img" />

            <!--    Select Ad Images     -->

            <Button
                android:id="@+id/post_ad_upload_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/upload" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>