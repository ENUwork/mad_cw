<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >

    <!--  SCROLLABLE CONTAINER  -->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <!--  USER PROFILE IMAGE  -->

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userProfilePic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            tools:srcCompat="@tools:sample/avatars" />

        <!--  USER UID  -->

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:text="Hello"
            android:textAlignment="center"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!--  USER MAIN INFO LAYOUT  -->

        <LinearLayout
            android:id="@+id/main_user_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="50dp"
            android:orientation="vertical" >

            <!-- USER ACCOUNT EDIT INFO REDIRECT Btn. -->

            <Button
                android:id="@+id/accountDetailsBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:background="@drawable/border_input"
                android:backgroundTint="#C4C4C4"
                android:fontFamily="@font/raleway_semibold"
                android:text="Account Details"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="16sp" />

            <!-- USER PEDAL TRIBE FEEDBACK REDIRECT Btn. -->

            <Button
                android:id="@+id/pedal_tribe_feedback_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:background="@drawable/border_input"
                android:backgroundTint="#C4C4C4"
                android:fontFamily="@font/ubuntu_bold_italic"
                android:text="@string/pedal_T"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="18sp" />

            <Button
                android:id="@+id/signOutButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:background="@drawable/border_input"
                android:backgroundTint="#C4C4C4"
                android:fontFamily="@font/raleway_semibold"
                android:text="@string/sign_out_txt"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="16sp" />

            <Button
                android:id="@+id/user_profile_ad_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:background="@drawable/border_input"
                android:backgroundTint="#C4C4C4"
                android:fontFamily="@font/raleway_semibold"
                android:text="@string/post_ad"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="16sp" />

            <Button
                android:id="@+id/fav_ads_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:background="@drawable/border_input"
                android:backgroundTint="#C4C4C4"
                android:fontFamily="@font/raleway_semibold"
                android:text="@string/fav_ads_txt"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="16sp" />

        </LinearLayout>

        <!--  USER EDIT INFO LAYOUT  -->

        <LinearLayout
            android:id="@+id/user_edit_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:visibility="gone"
            android:orientation="vertical"
            android:gravity="center" >

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:text="Hello"
                android:textAlignment="center"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/username_field" />

            <EditText
                android:id="@+id/account_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:background="@drawable/border_input"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textAlignment="textStart" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/location_field" />

            <EditText
                android:id="@+id/account_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:background="@drawable/border_input"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textAlignment="textStart" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/email_field" />

            <EditText
                android:id="@+id/account_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:background="@drawable/border_input"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textAlignment="textStart" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/f_name" />

            <EditText
                android:id="@+id/account_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:background="@drawable/border_input"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textAlignment="textStart" />

            <Button
                android:id="@+id/updateProfilePic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:background="@drawable/border_input"
                android:backgroundTint="#C4C4C4"
                android:fontFamily="@font/raleway_semibold"
                android:text="Update Profile Picture"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="16sp" />

            <Button
                android:id="@+id/saveAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:background="@drawable/border_input"
                android:backgroundTint="#C4C4C4"
                android:fontFamily="@font/raleway_semibold"
                android:text="Save Settings"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="16sp" />

        </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>