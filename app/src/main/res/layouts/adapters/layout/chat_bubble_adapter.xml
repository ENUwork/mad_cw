<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TableRow
        android:id="@+id/warningBox"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:weightSum="5"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/chatWarning"
            android:textAlignment="center"
            android:textColor="#C4C4C4"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cahtWarning_txt"
            android:layout_weight="3"
            android:textSize="10sp" />

    </TableRow>

    <View
        android:id="@+id/dividerBox"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_margin="10dp"
        android:background="#C4C4C4" />

    <TextView
        android:id="@+id/ad_chat_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAlignment="center"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/msg_outgoing_layout"
        style="@style/chatOutgoing"
        android:orientation="vertical">

        <TextView
            android:id="@+id/msg_txt_outgoing"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxWidth="200dp"
            android:text="TextView"
            android:textAlignment="textStart"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/ad_chat_out_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxWidth="200dp"
            android:text="TextView"
            android:textAlignment="textStart"
            android:textColor="#FFFFFF"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/msg_incoming_layout"
        style="@style/chatIncoming"
        android:orientation="vertical">

        <TextView
            android:id="@+id/msg_txt_incoming"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxWidth="200dp"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="textEnd"
            android:text="TextView" />

        <TextView
            android:id="@+id/ad_chat_in_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="TextView"
            android:textAlignment="textEnd"
            android:maxWidth="200dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="10sp" />

    </LinearLayout>

</LinearLayout>