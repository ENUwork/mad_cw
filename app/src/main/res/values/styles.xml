<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--  ADVERT INPUT STYLE DESIGN  -->

    <style name="advert_post_input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--  SPINNER STYLE DESIGN  -->

    <style name="spinner_style">
        <item name="android:background">@drawable/gradient_spinner</item>
        <item name="android:dropDownVerticalOffset">40dp</item>
        <item name="android:popupBackground">#FFFFFF</item>
    </style>

    <!--  ITEM CONDITION WEAR  -->

    <string-array name="item_condition_wear">
        <item> Like New </item>
        <item> Mint </item>
        <item> Visible Wear </item>
        <item> Broken </item>
        <item> Repair Required </item>
    </string-array>

</resources>
