<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <!--  APP THEME [NO ACTION BAR]  -->

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--  APP BUTTON STYLES  -->

    <style name="btn_main">
        <item name="android:layout_width"> wrap_content </item>
        <item name="android:layout_height"> wrap_content </item>
        <item name="android:layout_gravity"> center </item>
        <item name="android:backgroundTint"> @color/colorPrimary </item>
        <item name="android:fontFamily"> @font/raleway_semibold </item>
        <item name="android:textAllCaps"> false </item>
        <item name="android:textColor"> #FFFFFF </item>
        <item name="android:textSize"> 16sp </item>
        <item name="android:textStyle"> bold </item>
        <item name="android:textAlignment"> center </item>
    </style>

    <!--  ADVERT INPUT TITLE FIELDS  -->

    <style name="field">
        <item name="android:layout_width"> wrap_content </item>
        <item name="android:layout_height"> wrap_content </item>
        <item name="android:textAlignment"> textStart </item>
        <item name="android:background"> @drawable/round_corner </item>
        <item name="android:textColor"> @color/colorAccent </item>
        <item name="android:fontFamily"> @font/raleway_semibold </item>
        <item name="android:textSize"> 17sp </item>
        <item name="android:textStyle"> bold </item>
        <item name="android:paddingHorizontal"> 8dp </item>
        <item name="android:paddingBottom"> 8dp </item>
        <item name="android:layout_marginBottom"> -8dp </item>
    </style>

    <!--  ADVERT TITLE FIELDS  -->

    <style name="inputFiled">
        <item name="android:layout_width"> match_parent </item>
        <item name="android:layout_height"> wrap_content </item>
        <item name="android:textColor"> @color/colorPrimaryDark </item>
        <item name="android:fontFamily"> @font/raleway_semibold </item>
        <item name="android:layout_marginBottom"> 30dp </item>
        <item name="android:background"> @drawable/border_input </item>
        <item name="android:ems"> 10 </item>
        <item name="android:padding"> 5dp </item>
        <item name="android:textAlignment"> textStart </item>
        <item name="android:textSize"> 18sp </item>
        <item name="android:textStyle"> bold </item>
    </style>

    <!--  SPINNER STYLE DESIGN  -->

    <style name="spinner_style">
        <item name="android:background">@drawable/gradient_spinner</item>
        <item name="android:textSize"> 20sp </item>
        <item name="android:spinnerMode"> dropdown </item>
        <item name="android:padding"> 10dp </item>
        <item name="android:layout_marginBottom"> 30dp </item>
        <item name="android:dropDownVerticalOffset"> 40dp </item>
        <item name="android:popupBackground">#FFFFFF</item>
    </style>

</resources>
